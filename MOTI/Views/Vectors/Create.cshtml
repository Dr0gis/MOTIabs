                @Html.ValidationMessageFor(model => model.Mark.Criterion.CName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IdMark">Название оценки</label>
            <!--@Html.LabelFor(model => model.IdMark, "IdMark", htmlAttributes: new { @class = "control-label col-md-2" })-->
            <div class="col-md-10">
                @Html.DropDownList("IdMark", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.IdMark, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
}

